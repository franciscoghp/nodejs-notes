<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                     <div class="form-group">
                         <input type="text" name="name" value="{{name}}" placeholder="Name" class="form-control">
                     </div>
                     <div class="form-group">
                         <input type="email" name="email" value="{{email}}" placeholder="Email" class="form-control">
                     </div>
                     <div class="form-group">
                         <input type="password" name="password" value="{{password}}" placeholder="Password" class="form-control">
                     </div>
                     <div class="form-group">
                         <input type="password" name="confirm_password" value="{{confirm_password}}" placeholder="Password" class="form-control">
                     </div>
                     <div class="form-group">
                         <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                     </div>
                </form>
            </div>
        </div> 
    </div>
</div>